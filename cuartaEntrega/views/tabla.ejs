<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Lista de productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  <h1 class="display-1 text-center">Lista de productos</h1>
  <div class="col-8 container ">
  <table class="table table-striped align-self-center">
    <tr class="table-dark">
      <th>ID</th>
      <th>Title</th>
      <th>Price</th>
      <th>Thumbnail</th>
    </tr>
    <% if (isEmpty) { %>
      <tr class="table-dark">
        <td>No hay productos registrados a√∫n</td>
      </tr>
    <% } %>
    <% products.forEach(function(producto) { %>
        <tr class="table-dark">
            <td><%= producto.id %></td>
            <td><%= producto.title %></td>
            <td><%= producto.price %></td>
            <% if (tieneImg) { %>
              <td><img src="<%= producto.thumbnail %>" alt="<%=producto.title %>" width="50px"></td>
            <% } %>
          </tr>
    <% }); %>
  </table>

  <a href="/"><button class="col-12 btn btn-primary">Agregar nuevo Producto</button></a>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</html>